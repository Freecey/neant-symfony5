{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <h1 class="text-3xl py-5 text-center bg-blue-900">Your Profile</h1>

        <div class="parent  md:grid md:grid-cols-6">
            <section class="sidebar bg-gray-700 md:col-span-1">
                <div class="md:pb-4">
                    <div class="my-5 text-center border-b-2">
                        Menu
                    </div>
                    <div class="my-5 text-center mx-5">
                        <a href="{{ path('home') }}"
                           class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Home</a>
                    </div>
                    <div class="my-5 text-center mx-5">
                        <a href="{{ path('profile') }}"
                           class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Profile</a>
                    </div>
                    <div class="my-5 text-center mx-5">
                        <a href=""
                           class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Articles ({{ app.user.articles.count }})</a>
                    </div>
                    <div class="my-5 text-center mx-5">
                        <a href=""
                           class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Comments
                            ({{ app.user.comments.count }})</a>
                    </div>
                </div>
            </section>
            <main class="main bg-gray-400 md:col-span-5">
                <section class="p-9">
                    {% for message in app.flashes('message') %}
                        <div class="bg-green-100 border border-green-500 text-green-900 px-9 py-3 rounded relative" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="bg-red-100 border border-red-500 text-red-900 px-9 py-3 rounded relative" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {% block profilemainsection %}{% endblock %}

                </section>
            </main>
        </div>

    </div>



{% endblock %}
