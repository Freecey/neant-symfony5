{# tailwindcss Sliding pagination control implementation #}
{% if pageCount > 1 %}
    <div class="inline-block">
        <div class="flex items-baseline flex-row border border-gray-400 rounded-sm w-auto">
        {% if first is defined and current != first %}
            <span class="bg-gray-700 text-blue-600 px-3 py-2 text-md border-r border-gray-400 font-bold">
                <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">â¯¬</a>
            </span>
        {% endif %}

        {% if previous is defined %}
            <span class="bg-gray-700 text-blue-600 px-3 text-md py-2 border-r border-gray-400">
                <a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">ğŸ¢€</a>
            </span>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <span class="bg-gray-700 text-blue-600 px-3 py-2 text-md border-r  border-gray-400">
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </span>
            {% else %}
                <span class="bg-blue-600 text-white px-3 py-2 text-md font-bold">{{ page }}</span>
            {% endif %}
        {% endfor %}

        {% if next is defined %}
            <span class="bg-gray-700 text-blue-600 px-3 py-2 text-md border-r border-gray-400">
                <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">ğŸ¢‚</a>
            </span>
        {% endif %}

        {% if last is defined and current != last %}
            <span class="bg-gray-700 text-blue-600 px-3 py-2 text-md border-gray-400 font-bold">
                <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">â¯®</a>
            </span>
        {% endif %}
        </div>
    </div>
{% endif %}
