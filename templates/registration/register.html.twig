{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<div class="container mx-auto">



    <div class="max-w-lg flex items-center justify-center bg-gray-800 py-12 px-4 sm:px-6 lg:px-8 mx-auto shadow-lg rounded-md">
        <div class="max-w-md w-full space-y-8">
            <div>
                <img class="mx-auto h-12 w-auto" src="/assets/img/default-monochrome.svg" alt="Workflow">
                <h2 class="mt-6 text-center text-3xl font-extrabold text-yellow-100">
                    Create your account
                </h2>
                {#                <p class="mt-2 text-center text-sm text-gray-600">#}
                {#                    Or#}
                {#                    <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">#}
                {#                        start your 14-day free trial#}
                {#                    </a>#}
                {#                </p>#}
            </div>

    {{ form_start(registrationForm) }}
            <div class="rounded-md shadow-sm">
                <div class="my-3">
        {{ form_row(registrationForm.alias) }}
                </div>
                <div class="mt-3 mb-5">
        {{ form_row(registrationForm.email) }}
                </div>
                <div class="mt-3">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
                </div>
            </div class="space-x-6">
        {{ form_row(registrationForm.agreeTerms) }}
            <a href="{{ path('privacy_policy') }}" class="text-sm mb-5">& Privacy Policy</a>
            <div>
        <button type="submit" class="my-5 group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                      <span class="absolute left-0 inset-y-0 flex items-center pl-3">
            <!-- Heroicon name: solid/lock-closed -->
            <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
          </span>
            Register</button>
            </div>
    {{ form_end(registrationForm) }}


            <div class="text-grey-dark mt-6 text-center">
                Already have an account?
                <a class="no-underline border-b border-blue text-blue" href="{{ path('app_login') }}">
                    Log in
                </a>.
            </div>
        </div>
    </div>

</div>
{% endblock %}
