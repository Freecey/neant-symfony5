{% extends 'base.html.twig' %}

{% block title %}Your Profile{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <h1 class="text-3xl py-5 text-center bg-blue-900">Your Profile</h1>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-500 text-green-900 px-4 py-3 rounded relative" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <div class="parent  md:grid md:grid-cols-6">
            <section class="sidebar bg-gray-700 md:col-span-1">
                <div class="md:pb-4">
                    <div class="my-5 text-center border-b-2">
                        Menu
                    </div>
                    <div class="my-5 text-center mx-5">
                        <a href="{{ path('home') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 rounded-full w-full block">Home</a>
                    </div>
                    <div class="my-5 text-center mx-5">
                        <a href="" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 rounded-full w-full block">My Comments ({{ app.user.comments.count }})</a>
                    </div>
                </div>
            </section>
            <main class="main bg-gray-400 md:col-span-5">
                <div>
                    {{ app.user.alias }}
                </div>
                <div>
                    {{ app.user.email }}
                </div>
            </main>
        </div>

    </div>



{% endblock %}
