{% extends 'base.html.twig' %}

{% block title article.title %}

{% block prebody %}
    {{ include ('parts/_prebody.html.twig') }}
{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <h1 class="my-5 text-3xl text-yellow-500">{{ article.title }}</h1>
        <div class="text-sm grid grid-cols-12 w-full my-5">
            <div class="col-start-1 col-end-7 text-gray-400 leading-none">
                    {% for cat in article.categories %}
                        <span class="mx-2 text-xs inline-flex items-center font-bold leading-sm uppercase px-3 py-1 rounded-full bg-white text-gray-700 border">
                                        {{cat.name}}
                                    </span>
                    {% endfor %}
            </div>
            <div class="mx-4 col-end-13 col-span-6 text-right text-gray-400">
                by {{ article.users }} --
                {{ article.createdAt|date("m/d/Y") }}
            </div>
        </div>
        <div class="rounded-b lg:rounded-b-none lg:rounded-r p-4 flex-1 flex flex-col  justify-between leading-normal bg-gray-700">
        {{ article.content|raw   }}
        </div>

    </div>
{% endblock %}

