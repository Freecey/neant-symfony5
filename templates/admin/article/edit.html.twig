{% extends 'base.html.twig' %}

{#{% block title %}#}

{% block body %}

    <div class="container mx-auto">
        <h2 class="text-3xl my-4">Edit Article</h2>
        {{ form_start(form) }}
        <div class="grid grid-cols-3 gap-4">
            <div>
        {{ form_row(form.title) }}
            </div>
            <div>
        {{ form_row(form.author) }}
            </div>
            <div>
        {{ form_row(form.category) }}
            </div>
        </div>
        {{ form_row(form.intro) }}
        {{ form_row(form.content) }}
            {{ form_widget(form) }}
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">Save change</button>
        {{ form_end(form) }}
    </div>

{% endblock %}
