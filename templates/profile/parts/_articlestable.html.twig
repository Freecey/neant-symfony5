<tr>
    <td class="border border-light-blue-500 px-4 py-2 text-light-blue-600 font-medium text-center">{{ article.createdat|date("m/d/Y") }}</td>
    <td class="border border-light-blue-500 px-4 py-2 text-light-blue-600 font-medium">{{ article.title }}</td>
    <td class="border border-light-blue-500 px-4 py-2 text-light-blue-600 font-medium text-center">
        <div>
            <a href="{{ path('profile.articles.edit', {id: article.id}) }}" class="my-2 group relative flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Edit</a>
        </div>
        <form method="post" action="{{ path('profile.articles.delete', {id: article.id}) }}" class="" onsubmit="return confirm('Confirm Delete action ?')">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
            <button class="w-full my-2 group relative flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-500 hover:bg-red-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Delete</button>
        </form>
    </td>
</tr>